<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:container="using:AxisAvaloniaApp.UserControls"
			 xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
             xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
             xmlns:controlsEx="using:AxisAvaloniaApp.UserControls.Extensions"
			 xmlns:switch ="using:AxisAvaloniaApp.UserControls.Switcher"
             x:Class="AxisAvaloniaApp.Views.ExchangeView">
	<container:OperationContainer ViewCloseCommand="{Binding CloseViewCommand}" >
		<container:OperationContainer.TitleContent>
			<Grid Height="50">
				<Border Grid.Row="0" Grid.ColumnSpan="2" VerticalAlignment="Center" Margin="10">
					<controlsEx:AxisTextBlock Text="Обмен" FontSize="18" Foreground="White" FontWeight="Bold"  />
				</Border>
			</Grid>
		</container:OperationContainer.TitleContent>
		<container:OperationContainer.WorkContent>
			<Border  VerticalAlignment="Center" HorizontalAlignment="Center" BorderThickness="1" BorderBrush="Black" CornerRadius="10" >
				<switch:Slider   GlyphWidth="20" IsChecked="True" Width="100" Height="20"/>
			</Border>
		</container:OperationContainer.WorkContent>
		<container:OperationContainer.AdditionalContent>
			<ScrollViewer>
				<Grid RowDefinitions="Auto,*">
					<Border Margin="10">
						<Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto">

							<!--<Border Grid.Column="1" BorderThickness="2" BorderBrush="White" CornerRadius="5">
								<Grid ColumnDefinitions="Auto,Auto,Auto" >
									<Border Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" IsVisible="{Binding IsImportDirection}">
										<controlsEx:AxisTextBlock Text="Import" FontSize="18" Foreground="Black" FontWeight="Bold" Margin="10,5" />
									</Border>
									<Button Grid.Row="0" Grid.Column="1" Width="40" Command="{Binding ChangeDirectionCommand}" VerticalAlignment="Stretch" Margin="0" BorderThickness="0" BorderBrush="White">
									
									</Button>								
									<Border Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" IsVisible="{Binding !IsImportDirection}">
										<controlsEx:AxisTextBlock Text="Export" FontSize="18" Foreground="Black" FontWeight="Bold" Margin="4"  />
									</Border>
								</Grid>
							</Border>-->

							<Border Grid.Row="0" Grid.Column="0">			
								<controlsEx:AxisTextBlock Text="Exchange direction" FontSize="18" Foreground="White" FontWeight="Bold" Margin="4"  />		
							</Border>

							<Border Padding="2" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" BorderThickness="1" BorderBrush="White" CornerRadius="10" >
								<switch:Slider  GlyphWidth="20" FontWeight="Bold" Foreground="White" LeftContentKey="strExport" RightContentKey="strImport" IsChecked="{Binding IsImportDirection,Mode= TwoWay}" Width="100" Height="20"/>
							</Border>
					


							<Border Grid.Row="1" Grid.Column="0">
								<controlsEx:AxisTextBlock Text="ImportFrom" FontSize="18" VerticalAlignment="Center" Foreground="White" FontWeight="Bold" Margin="4" />
							</Border>
							<Border Grid.Row="1" Grid.Column="1">					
								<ComboBox Margin="5" HorizontalAlignment="Stretch"  Items="{Binding	ImportFromItems}" SelectedItem="{Binding, Path=SelectedImportFromItem, Mode=TwoWay}" CornerRadius="0">
									<ComboBox.ItemTemplate>
										<DataTemplate>
											<controlsEx:AxisTextBlock Background="Transparent" Text="{Binding	Key, Mode=TwoWay}" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,5"  TextAlignment="Left" Padding="0"  />
										</DataTemplate>
									</ComboBox.ItemTemplate>
								</ComboBox>				
							</Border>

							<Border Grid.Row="2" Grid.Column="0">
								<controlsEx:AxisTextBlock Text="Operation type" FontSize="18" Foreground="White" FontWeight="Bold" Margin="4"  />
							</Border>
					
							<Border Grid.Row="2" Grid.Column="1" Padding="2"  VerticalAlignment="Center" HorizontalAlignment="Center" BorderThickness="1" BorderBrush="White" CornerRadius="10" >
								<switch:Slider  GlyphWidth="20" FontWeight="Bold" Foreground="White" LeftContentKey="strSale" RightContentKey="strPurchase" IsChecked="{Binding IsSaleOperation,Mode= TwoWay}" Width="100" Height="20"/>
							</Border>
			

							<Border Grid.Row="3" Grid.Column="0">
								<controlsEx:AxisTextBlock Text="ExportTo" FontSize="18" VerticalAlignment="Center" Foreground="White" FontWeight="Bold" Margin="4" />
							</Border>
							<Border Grid.Row="3" Grid.Column="1">
								<ComboBox Margin="5" HorizontalAlignment="Stretch"  Items="{Binding	ExportToItems}" SelectedItem="{Binding Path=SelectedExportToItem, Mode=TwoWay}" CornerRadius="0">
									<ComboBox.ItemTemplate>
										<DataTemplate>
											<controlsEx:AxisTextBlock Background="Transparent" Text="{Binding	Key, Mode=TwoWay}" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,5"  TextAlignment="Left" Padding="0"  />
										</DataTemplate>
									</ComboBox.ItemTemplate>
								</ComboBox>
							</Border>

							<Border Grid.Row="4" Grid.ColumnSpan="2">
								<controlsEx:AxisTextBlock Text="Filter" FontSize="18" VerticalAlignment="Center" Foreground="White" FontWeight="Bold" Margin="4" />
							</Border>

							<Border Grid.Row="5" Grid.ColumnSpan="2">
								<controlsEx:AxisTextBlock Text="Number" FontSize="18" VerticalAlignment="Center" Foreground="White" FontWeight="Bold" Margin="4" />
							</Border>

							<Border Grid.Row="6" Grid.ColumnSpan="2">
								<Grid	ColumnDefinitions="Auto,*">
									<controlsEx:AxisTextBlock Text="From" FontSize="18" VerticalAlignment="Center" Foreground="White" FontWeight="Bold" Margin="4" />
									<TextBox Grid.Column="2" Text="from"/>
								</Grid>
							</Border>

							<Border Grid.Row="7" Grid.ColumnSpan="2">
								<Grid	ColumnDefinitions="Auto,*">
									<controlsEx:AxisTextBlock Text="To" FontSize="18" VerticalAlignment="Center" Foreground="White" FontWeight="Bold" Margin="4" />
									<TextBox Grid.Column="2" Text="to"/>
								</Grid>
							</Border>

							<Border Grid.Row="8" Grid.ColumnSpan="2">
								<controlsEx:AxisTextBlock Text="Date" FontSize="18" VerticalAlignment="Center" Foreground="White" FontWeight="Bold" Margin="4" />
							</Border>

							<Border Grid.Row="9" Grid.ColumnSpan="2">
								<Grid	ColumnDefinitions="Auto,*">
									<controlsEx:AxisTextBlock Text="From" FontSize="18" VerticalAlignment="Center" Foreground="White" FontWeight="Bold" Margin="4" />
									<DatePicker  Height="34" VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Row="2" Grid.Column="1" CornerRadius="0" Background="White" Margin="5,2" />
								</Grid>
							</Border>
							<Border Grid.Row="10" Grid.ColumnSpan="2">
								<Grid	ColumnDefinitions="Auto,*">
									<controlsEx:AxisTextBlock Text="To" FontSize="18" VerticalAlignment="Center" Foreground="White" FontWeight="Bold" Margin="4" />
									<DatePicker  Height="34" VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Row="2" Grid.Column="1" CornerRadius="0" Background="White" Margin="5,2" />
								</Grid>
							</Border>
							<Border Grid.Row="11" Grid.ColumnSpan="2">
								<Button VerticalAlignment="Top" Margin="40,20,40,10"  HorizontalAlignment="Stretch" BorderBrush="White" BorderThickness="2" Classes="WhiteBorder">
									<controlsEx:AxisTextBlock LocalizeTextKey="strPrint" FontSize="18" Foreground="White" Background="Transparent" TextAlignment="Center" />
								</Button>
							</Border>
							<Border Grid.Row="12" Grid.ColumnSpan="2">
								<Button VerticalAlignment="Top" Margin="40,20,40,10"  HorizontalAlignment="Stretch" BorderBrush="White" BorderThickness="2" Classes="WhiteBorder">
									<controlsEx:AxisTextBlock LocalizeTextKey="strPrint" FontSize="18" Foreground="White" Background="Transparent" TextAlignment="Center" />
								</Button>
							</Border>
						</Grid>
					</Border>
					<TextBox Grid.Row="1" Grid.ColumnSpan="2" Background="Transparent" IsReadOnly="True" Margin="10,0,10,10"/>
				</Grid>
			</ScrollViewer>
		</container:OperationContainer.AdditionalContent>
	</container:OperationContainer>
</UserControl>
