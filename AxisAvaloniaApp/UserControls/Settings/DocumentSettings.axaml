<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:set="using:AxisAvaloniaApp.UserControls.Settings"
			 xmlns:ucext="using:AxisAvaloniaApp.UserControls.Extensions"
             mc:Ignorable="d" d:DesignHeight="400" d:DesignWidth="300" MinHeight="200" MinWidth="200"
             x:Class="AxisAvaloniaApp.UserControls.Settings.DocumentSettings"
			 x:Name="UC">
	<UserControl.Styles>
		<Style Selector="Border">
			<Setter	Property="BorderBrush" Value="DarkGray"/>
		</Style>
		<Style Selector="TextBox">
			<Setter	Property="BorderBrush" Value="DarkGray"/>
		</Style>
		<Style Selector="ComboBox">
			<Setter	Property="BorderBrush" Value="DarkGray"/>
		</Style>
	</UserControl.Styles>
	<Grid RowDefinitions="50,*,Auto" Margin="0">
		<Border Grid.Row="0" BorderThickness="0,0,0,1" Margin="20,5,0,5">
			<ucext:AxisTextBlock  VerticalAlignment="Center"  LocalizeTextKey="strDocuments"  Background="Transparent" Padding="20,0" Foreground="Black"  FontSize="18"  TextAlignment="Left" />
		</Border>


		<Border Grid.Row="1"  BorderThickness="0">
			<ScrollViewer Padding="20,0">
				<Grid x:Name="AdaptiveSettingsGrid" RowDefinitions="Auto,Auto,Auto,Auto">


					<!--Input for USN-->
					<set:AdaptiveSettingsItemControl Grid.Row="0"  TitleMinWidth="{Binding	ElementName=UC, Path=ViewModel.TitleMinWidth}" TitleKey="strUSN" >
						<set:AdaptiveSettingsItemControl.Input>
							<ucext:AxisTextBox Text="{Binding	ElementName=UC, Path=ViewModel.USN, Mode=TwoWay}" LocalizePlaceholderKey="strUSN" ExplanationKey="strUSN" FontSize="12"  Margin="10,5" Padding="20,0" VerticalContentAlignment="Center" CornerRadius="0"/>
						</set:AdaptiveSettingsItemControl.Input>
					</set:AdaptiveSettingsItemControl>

					<!--Input for OperatorCode-->
					<set:AdaptiveSettingsItemControl Grid.Row="1"  TitleMinWidth="{Binding	ElementName=UC, Path=ViewModel.TitleMinWidth}" TitleKey="strOperatorCode" >
						<set:AdaptiveSettingsItemControl.Input>
							<ucext:AxisTextBox Text="{Binding	ElementName=UC, Path=ViewModel.OperatorCode, Mode=TwoWay}" LocalizePlaceholderKey="strOperatorCode" ExplanationKey="strOperatorCode" FontSize="12"  Margin="10,5" Padding="20,0" VerticalContentAlignment="Center" CornerRadius="0"/>
						</set:AdaptiveSettingsItemControl.Input>
					</set:AdaptiveSettingsItemControl>

					<!--Input for UserName-->
					<set:AdaptiveSettingsItemControl Grid.Row="2"  TitleMinWidth="{Binding	ElementName=UC, Path=ViewModel.TitleMinWidth}" TitleKey="strUserName" >
						<set:AdaptiveSettingsItemControl.Input>
							<ucext:AxisTextBox Text="{Binding	ElementName=UC, Path=ViewModel.UserName, Mode=TwoWay}" LocalizePlaceholderKey="strUserName" ExplanationKey="strUserName" FontSize="12"  Margin="10,5" Padding="20,0" VerticalContentAlignment="Center" CornerRadius="0"/>
						</set:AdaptiveSettingsItemControl.Input>
					</set:AdaptiveSettingsItemControl>

					<!--Input for Language-->
					<set:AdaptiveSettingsItemControl Grid.Row="3" TitleKey="strLanguage" TitleMinWidth="{Binding	ElementName=UC, Path=ViewModel.TitleMinWidth}">
						<set:AdaptiveSettingsItemControl.Input>
							<ComboBox Margin="10,5" HorizontalAlignment="Stretch" Height="30"  Items="{Binding	ElementName=UC, Path=ViewModel.Languages}" SelectedItem="{Binding	ElementName=UC, Path=ViewModel.SelectedLanguage, Mode=TwoWay}" CornerRadius="0">
								<ComboBox.ItemTemplate>
									<DataTemplate>
										<ucext:AxisTextBlock Background="Transparent" Text="{Binding	Key, Mode=TwoWay}" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0"  TextAlignment="Left" Padding="0"  />
									</DataTemplate>
								</ComboBox.ItemTemplate>
							</ComboBox>
						</set:AdaptiveSettingsItemControl.Input>
					</set:AdaptiveSettingsItemControl>

				</Grid>
			</ScrollViewer>
		</Border>
		
		
		<Grid  RowDefinitions="Auto,Auto"  Grid.Row="2" Background="Transparent">
			<Button Grid.Row="1" Background="Transparent" BorderThickness="2" BorderBrush="SteelBlue" Foreground="SteelBlue" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="20,5" HorizontalContentAlignment="Center">Export to log-file</Button>
		</Grid>
	</Grid>
</UserControl>
